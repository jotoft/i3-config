# resize window (you can also use the mouse for that)
mode "Size" {
    # Pressing down will grow the window’s height.
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    # same bindings, but for the arrow keys
    bindsym Left resize shrink width 10 px
    bindsym Down resize grow height 10 px
    bindsym Up resize shrink height 10 px
    bindsym Right resize grow width 10 px

    bindsym Shift+Left resize shrink width 100 px
    bindsym Shift+Right resize grow width 100 px
    bindsym Shift+Up resize shrink height 60 px
    bindsym Shift+Down resize grow height 60 px

    bindsym g gaps horizontal current set 20; gaps inner current set 20; mode "default"
    bindsym s gaps horizontal current set 1px; gaps inner current set 0; mode "default"
    bindsym $mod+a gaps horizontal current set 400; gaps inner current set 10; mode "default"

    # back to normal: Enter or Escape or $mod+r
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
    bindsym e mode "default"
    bindsym r mode "default"
    bindsym --whole-window button8 mode "default"
}

mode "launch" {
    bindsym e exec thunar; mode "default"
    bindsym t exec alacritty; mode "default"
    bindsym f exec firefox; mode "default"
    bindsym g exec firefox -P Work; mode "default"

    # back to normal: Enter or Escape or $mod+r
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
    bindsym e mode "default"
    bindsym r mode "default"
    bindsym --whole-window button8 mode "default"
}

mode "pull" {
    bindsym f [class="firefox"] move workspace current; mode "default"
    bindsym e [class="thunar"] move workspace current; mode "default"
    bindsym t [class="alacritty"] move workspace current; mode "default"

    # back to normal: Enter or Escape or $mod+r
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
    bindsym --whole-window button8 mode "default"
}

mode "scratch" {
    bindsym c [class="superProductivity"] scratchpad show; mode "default"
    bindsym f [class="firefox"] scratchpad show; mode "default"
    bindsym d [class="Mousepad"] scratchpad show; mode "default"
    bindsym a [class="alacritty"] scratchpad show; mode "default"
    bindsym s [class="joplin"] scratchpad show; mode "default"
    bindsym $mod+c [class="superProductivity"] scratchpad show; mode "default"
    bindsym $mod+f [class="firefox"] scratchpad show; mode "default"
    bindsym $mod+a [class="alacritty"] scratchpad show; mode "default"
    bindsym $mod+s [class="joplin"] scratchpad show; mode "default"

    # back to normal: Enter or Escape or $mod+r
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
    bindsym e mode "default"
    bindsym r mode "default"
    bindsym --whole-window button8 mode "default"
}

bindsym $mod+F3 mode "launch"
bindsym $mod+F8 mode "pull"
bindsym $mod+F10 mode "scratch"
bindsym $mod+c mode "scratch"
bindsym $mod+r mode "Size"

